@model PublicCaseViewModel
@functions {
    public string TranslateStatus(string status)
    {
        return status switch
        {
            "Pending" => "በመጠባበቅ ላይ",
            "Accepted" => "ተቀባይነት አግኝቷል",
            "Declined" => "ዉድቅ ተደርጓል",
            "Opened" => "ተከፍቷል",
            "Closed" => "ዝግ ተደርጓል",
            _ => "ያልታወቀ"
        };
    }
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <div class="container">

                <div class="collapse navbar-collapse justify-content-end">
                    <div class="navbar-nav">
                        <a class="nav-link nav-link-custom me-3" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-sign-in-alt me-1"></i> Home</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="case-detail-container">
    <div class="case-card shadow-lg">
        <div class="case-header bg-primary-gradient text-white">
            <h2 class="case-title">
                <i class="fas fa-balance-scale case-icon"></i>
                @Model.Title
            </h2>
            <div class="case-number-badge">
                <i class="fas fa-hashtag"></i>
                @Model.CaseNumber
            </div>
        </div>

        <div class="case-body">
            <!-- Status Ribbon -->
           
            <div class="status-ribbon ribbon-@Model.Status.ToLower()">
               <i class="fas fa-certificate me-2"></i>@TranslateStatus(Model.Status)
            </div>

            <!-- Timeline Section -->
            <div class="case-timeline">
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5 class="timeline-title">
                            <i class="fas fa-user-tie me-2"></i>
                            ከሳሽ/Plaintiff
                        </h5>
                        <p class="timeline-text">@Model.PlaintiffName</p>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5 class="timeline-title">
                            <i class="fas fa-user-shield me-2"></i>
                           ተከሳሽ/Defendant
                        </h5>
                        <p class="timeline-text">@Model.DefendantName</p>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5 class="timeline-title">
                            <i class="fas fa-calendar-plus me-2"></i>
                           የተመዘገበበት ቀን/Registration Date
                        </h5>
                        <p class="timeline-text">@Model.RegistrationDate.ToString("dd MMMM yyyy")</p>
                    </div>
                </div>

                @if (Model.UpcomingHearing.HasValue)
                {
                    <div class="timeline-item highlight">
                        <div class="timeline-marker warning"></div>
                        <div class="timeline-content">
                            <h5 class="timeline-title text-warning">
                                <i class="fas fa-gavel me-2"></i>
                             ችሎት መስሚያ ቀን/Hearing Date
                            </h5>
                            <p class="timeline-text">
                                <span class="badge bg-warning text-dark">
                                    @Model.UpcomingHearing.Value.ToString("dd MMM yyyy HH:mm")
                                </span>
                            </p>
                        </div>
                    </div>
                }

                @if (Model.AppointmentDate.HasValue)
                {
                    <div class="timeline-item">
                        <div class="timeline-marker success"></div>
                        <div class="timeline-content">
                            <h5 class="timeline-title">
                                <i class="fas fa-handshake me-2"></i>
                                የቀጠሮ ቀን/Appointment Date
                            </h5>
                            <p class="timeline-text">@Model.AppointmentDate.Value.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                }

                @if (!Model.UpcomingHearing.HasValue)
                {
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <div class="alert alert-info timeline-alert">
                                <i class="fas fa-info-circle me-2"></i>
                               ችሎት መስሚያ ቀን የልዎትም። /No upcoming hearings scheduled
                            </div>
                        </div>
                    </div>
                }
                 @if (!Model.AppointmentDate.HasValue)
                {
                     <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <div class="alert alert-info timeline-alert">
                                <i class="fas fa-info-circle me-2"></i>
                                የቀጠሮ ቀን የልዎትም። /No AppointmentDate scheduled
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .case-detail-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .case-card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
    }

    .case-header {
        padding: 2rem;
        position: relative;
        background: linear-gradient(135deg, #2c3e50, #3498db);
    }

    .case-title {
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .case-icon {
        font-size: 1.8rem;
        margin-right: 1rem;
    }

    .case-number-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(255, 255, 255, 0.15);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .case-body {
        padding: 2rem;
        background: #ffffff;
        position: relative;
    }

    .status-ribbon {
        position: absolute;
        top: -40px;
        right: 20px;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
        font-weight: 600;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .ribbon-opened { background: #2ecc71; color: white; }
    .ribbon-closed { background:rgb(151, 147, 147); color: white; }
    .ribbon-pending { background: #f1c40f; color: black; }
    .ribbon-accepted { background: #3498db; color: white; }
    .ribbon-declined { background:rgb(245, 42, 42); color: white; }

    .case-timeline {
        position: relative;
        padding-left: 30px;
        margin-left: 15px;
    }

    .case-timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 2px;
        height: 100%;
        background: #e0e0e0;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 2rem;
    }

    .timeline-marker {
        position: absolute;
        left: -38px;
        top: 5px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: #3498db;
        border: 3px solid white;
        z-index: 2;
    }

    .timeline-marker.warning { background: #f1c40f; }
    .timeline-marker.success { background: #2ecc71; }

    .timeline-content {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

    .timeline-content:hover {
        transform: translateX(10px);
    }

    .timeline-title {
        color: #2c3e50;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .timeline-text {
        margin: 0;
        color: #7f8c8d;
        font-size: 1.1rem;
    }

    .timeline-alert {
        margin: 0;
        border-radius: 8px;
    }

    .bg-primary-gradient {
        background: linear-gradient(135deg, #2c3e50, #3498db);
    }
</style>